/* pages/resign/resign.wxss */  
  
.table {  
  padding: 16px;  
  border: 1px solid #ddd;  
  border-radius: 4px;  
  background-color: #fff;  
  margin-bottom: 20px;  
}  
  
.table > view:first-child {  
  font-size: 18px;  
  font-weight: bold;  
  margin-bottom: 16px;  
}  
  
.tr {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  margin-bottom: 10px;  
}  
  
.th {  
  width: 20%;  
  font-weight: bold;  
}  
  
.input {  
  width: 75%;  
  height: 36px;  
  line-height: 36px;  
  border: 1px solid #ddd;  
  border-radius: 4px;  
  padding: 0 8px;  
  font-size: 16px;  
}  
  
.btn-bottom {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  margin-top: 16px;  
}  
  
.btn-determine,  
.btn-cancel {  
  width: 48%;  
  height: 40px;  
  line-height: 27px;  
  border: none;  
  border-radius: 4px;  
  font-size: 16px;  
}  
  
.btn-determine {  
  background-color: #009688;  
  color: #fff;  
}  
  
.btn-cancel {  
  background-color: #eee;  
  color: #333;  
}  

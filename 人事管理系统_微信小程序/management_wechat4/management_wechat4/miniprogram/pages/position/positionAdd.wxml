<view class="container">
  <view style="font-family:sans-serif;font-size:30px;">添加岗位信息</view>
  <text>\n</text>
  <text>\n</text>
  <text>\n</text>
  <view class="form-item">
    <view class="label">岗位编号：</view>
    <input class="input" value="{{position.positionId}}" bindinput="inputPositionId" />
  </view>
  <view class="form-item">
    <view class="label">岗位名称：</view>
    <input class="input" value="{{position.positionName}}" bindinput="inputPositionName" />
  </view>
  <view class="form-item">
    <view class="label">岗位类型：</view>
    <input class="input" value="{{position.positionType}}" bindinput="inputPositionType" />
  </view>
  <view class="form-item">
    <view class="label">岗位编制：</view>
    <input class="input" value="{{position.positionNum}}" bindinput="inputPositionNum" />
  </view>
  <!-- 其他表单项 -->
  <button class="btn-save" bindtap="addposition">添加</button>
  <button class="btn-cancel" bindtap="cancelAdd">取消</button>
</view>
